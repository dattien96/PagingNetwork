<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.StartActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_api_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_navigate_api_load" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_room_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_navigate_room_load" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_navigate_load_more_base" />
</LinearLayout>
